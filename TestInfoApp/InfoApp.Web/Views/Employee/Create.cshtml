@using InfoApp.Web.Models.InputOutputModels.InputModels.EmployeeOutputModels;
@model EmployeeCreateOutputModel;

@{
    ViewData["Title"] = "Create";
}

    <div class="row mt-5">
        <div class="col-md-6 offset-3">
            <h1 class="text-secondary">Add</h1>
            <form id="account" method="post">
                <h4 class="text-secondary">Create new employee</h4>
                <hr class="bg-secondary" style="height:2px" />
                <div class="form-group">
                    <label class="text-primary">First name</label>
                    <input name="firstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="text-primary">Last name</label>
                    <input name="lastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="text-primary">Start at: </label>
                    <input type="date" name="startingDate">
                </div>
                <div class="form-group">
                    <label class="text-primary">Salary</label>
                    <input type="number" min="500" step="10" name="salary" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="text-primary">Vacation days</label>
                    <input type="number" min="20" step="1" name="vacationDays" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="text-primary">Expirience level</label>
                    <select class="form-control" name="expirienceLevel" type="text">
                        <option selected disabled>-- Choose level --</option>
                        @for (int i = 0; i < Model.Levels.Count(); i++)
                        {
                            <option>@Model.Levels[i].LevelName</option>
                        }
                    </select>
                </div>
                <hr class="bg-secondary" style="height:2px" />
                <div class="form-group text-lg-right">
                    <a type="button" class="btn btn-primary" href="~/Employee/AllByOffice/@Model.OfficeId">Back</a>
                    <button type="submit" class="btn btn-secondary" src="~/Employee/Create/@Model.OfficeId">Create</button>
                </div>
            </form>
        </div>
    </div>

