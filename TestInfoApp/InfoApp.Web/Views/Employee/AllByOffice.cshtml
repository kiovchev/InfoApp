@using InfoApp.Web.Models.InputOutputModels.OutputModels.EmployeeOutputModels;
@model EmployeeAllByOfficeModel;

@{
    ViewData["Title"] = "AllByCompany";
}

@{
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="text-secondary">Employees</h3>
        </div>
        <div class="col offset-8">
            <a type="button" class="btn btn-primary" href="~/Office/All/@Model.CompanyId">Back</a>
            <a type="button" class="btn btn-secondary" href="~/Employee/Create/@Model.OfficeId">Add</a>
        </div>
    </div>
</div>

<div class="table-responsive mt-5">
    @if (Model.Employees.Count() == 0)
    {
        <h3 class="text-danger ">There are no Employees for that company in database!!!</h3>
    }
    else
    {
        <table class="table text-center">
            <thead>
                <tr>
                    <th class="text-secondary border" scope="col">#</th>
                    <th class="text-secondary border" scope="col">First name</th>
                    <th class="text-secondary border" scope="col">Last name</th>
                    <th class="text-secondary border" scope="col">Starting date</th>
                    <th class="text-secondary border" scope="col">Salary</th>
                    <th class="text-secondary border" scope="col">Vacation days</th>
                    <th class="text-secondary border" scope="col">Experience Level</th>
                    <th class="text-secondary border" scope="col">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Employees.Count(); i++)
                {
                    ++count;
                    <tr class="text-center">
                        <td class="text-secondary border" scope="col">@count</td>
                        <td class="text-secondary border" name="firstName" scope="col">@Model.Employees[i].FirstName</td>
                        <td class="text-secondary border" name="lastName" scope="col">@Model.Employees[i].LastName</td>
                        <td class="text-secondary border" name="startingName" scope="col">@Model.Employees[i].StartingDate</td>
                        <td class="text-secondary border" name="salary" scope="col">@Model.Employees[i].Salary</td>
                        <td class="text-secondary border" name="vacationDays" scope="col">@Model.Employees[i].VacationDays</td>
                        <td class="text-secondary border" name="experienceLevel" scope="col">@Model.Employees[i].ExperienceLevel</td>
                        <td class="text-secondary border" scope="col">
                            <a class="btn bg-secondary text-white" href="~/Employee/Edit/@Model.Employees[i].EmploeeId">Edit</a>
                            <a class="btn bg-danger text-white" href="~/Employee/Delete/@Model.Employees[i].EmploeeId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

