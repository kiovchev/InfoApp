@using InfoApp.Web.Models.InputOutputModels.OutputModels.CityOutputModels;
@model List<CityOutputModel>;

@{
    ViewData["Title"] = "All";
}

@{
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="text-secondary">Cities</h3>
        </div>
        <div class="col offset-9">
            <a type="button" class="btn btn-primary" href="~/Country/All">Back</a>
        </div>
    </div>
</div>

<div class="table-responsive mt-5">
    @if (Model.Count() == 0)
    {
        <h3 class="text-danger ">No cities for that country in database!!!</h3>
    }
    else
    {
        <table class="table text-center">
            <thead>
                <tr>
                    <th class="text-secondary border" scope="col">#</th>
                    <th class="text-secondary border" scope="col">City name</th>
                    <th class="text-secondary border" scope="col">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    ++count;
                    <tr class="text-center">
                        <td class="text-secondary border" scope="col">@count</td>
                        <td class="text-secondary border" name="cityName" scope="col">@Model[i].CityName</td>
                        <td class="text-secondary border" scope="col">
                            <a class="btn bg-secondary text-white" href="~/City/Edit/@Model[i].CityId">Edit</a>
                            <a class="btn bg-danger text-white" href="~/City/Delete/@Model[i].CityId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


