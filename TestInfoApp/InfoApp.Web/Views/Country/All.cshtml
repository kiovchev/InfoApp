@using InfoApp.Web.Models.InputOutputModels.OutputModels.CountryOutputModels;
@model List<CountryOutputModel>;

@{
    ViewData["Title"] = "All";
}

@{
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="text-secondary">Countries</h3>
        </div>
        <div class="col offset-8">
            <a type="button" class="btn btn-primary" href="~/Administration/All">Back</a>
            <a type="button" class="btn bg-secondary text-white" href="~/Country/Create">Add</a>
        </div>
    </div>
</div>

<div class="table-responsive mt-5">
    @if (Model.Count() == 0)
    {
        <h3 class="text-danger ">No countries in database!!!</h3>
    }
    else
    {
        <table class="table text-center">
            <thead>
                <tr>
                    <th class="text-secondary border" scope="col">#</th>
                    <th class="text-secondary border" scope="col">Country name</th>
                    <th class="text-secondary border" scope="col">Cities</th>
                    <th class="text-secondary border" scope="col">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    ++count;
                <tr class="text-center">
                    <td class="text-secondary border" scope="col">@count</td>
                    <td class="text-secondary border"name="countryName" scope="col">@Model[i].CountryName</td>
                    <td class="text-secondary border" scope="col">
                        <a class="btn bg-success text-white" href="~/City/AllByCountry/@Model[i].CountryId">Cities</a>
                    </td>
                    <td class="text-secondary border" scope="col">
                        <a class="btn bg-secondary text-white" href="~/Country/Edit/@Model[i].CountryId">Edit</a>
                        <a class="btn bg-danger text-white" href="~/Country/Delete/@Model[i].CountryId">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>

