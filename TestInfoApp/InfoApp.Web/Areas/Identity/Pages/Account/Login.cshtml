@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row mt-5">
    <div class="col-md-6 offset-3">
        <h1 class="text-secondary">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h4 class="text-secondary">Use a local account to log in.</h4>
                <hr class="bg-secondary" style="height:2px" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-primary" asp-for="Input.Username"></label>
                    <input asp-for="Input.Username"  class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-primary" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <hr class="bg-secondary" style="height:2px" />
                <div class="form-group text-lg-right">
                    <button type="submit" class="btn btn-secondary">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>
